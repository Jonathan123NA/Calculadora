            <Button
                android:id="@+id/btn_igual"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="@android:drawable/dialog_holo_dark_frame"
                android:elevation="24dp"
                android:gravity="center"
                android:onClick="calcular"
                android:text="@string/btn_igual"
                android:textColor="#001514"
                android:textSize="20sp"
                app:cornerRadius="100dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tv_operacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/tv_operacion"
        android:textColor="#001514"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_resultado"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tv_resultado"
        android:textColor="#001514"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_operacion" />
</androidx.constraintlayout.widget.ConstraintLayout>