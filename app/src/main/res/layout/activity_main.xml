                android:textSize="20sp"
                app:cornerRadius="100dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tr3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_cuatro"
                android:layout_width="match_parent"
